---
/* vibepedia 記事カードコンポーネント
 * メインページの「選り抜き記事」セクションで使用するカード。
 * サムネイル画像・タイトル・概要を表示する。
 */
interface Props {
  title: string;
  description: string;
  slug: string;
  image?: string;
  category: string;
  featured?: boolean;
}

const { title, description, slug, image, category, featured = false } = Astro.props;
const base = import.meta.env.BASE_URL;
const articleUrl = `${base}articles/${encodeURIComponent(slug)}`;
---

<article class:list={['article-card', { 'is-featured': featured }]}>
  {image && (
    <a href={articleUrl} class="card-image-link">
      <img src={image} alt={title} class="card-image" loading="lazy" />
    </a>
  )}
  <div class="card-body">
    <span class="card-category">{category}</span>
    <h3 class="card-title">
      <a href={articleUrl}>{title}</a>
    </h3>
    <p class="card-description">{description}</p>
  </div>
</article>

<style>
  .article-card {
    display: flex;
    flex-direction: column;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: box-shadow var(--transition-normal), transform var(--transition-normal);
  }

  .article-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .article-card.is-featured {
    border-color: var(--color-featured-border);
  }

  .card-image-link {
    display: block;
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 180px;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .article-card:hover .card-image {
    transform: scale(1.03);
  }

  .card-body {
    padding: var(--spacing-md);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-category {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--color-accent);
    margin-bottom: var(--spacing-xs);
  }

  .is-featured .card-category {
    color: var(--color-featured);
  }

  .card-title {
    font-size: 1.05rem;
    font-weight: 600;
    line-height: 1.35;
    margin-bottom: var(--spacing-sm);
  }

  .card-title a {
    color: var(--color-text);
    text-decoration: none;
  }

  .card-title a:visited {
    color: var(--color-text);
  }

  .card-title a:hover {
    color: var(--color-link);
    text-decoration: underline;
  }

  .card-description {
    font-size: 0.8125rem;
    line-height: 1.5;
    color: var(--color-text-secondary);
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
